function sameNumbers (number) {

let numbersToString = number.toString ().split ('');
let sum = 0;
let isSame = true;

for (let i=0; i<numbersToString.length; i++) {
    sum += Number (numbersToString [i]);
    if (numbersToString [i] !== numbersToString [0]) {
        isSame = false;
    }
}
console.log (isSame);
console.log (sum);

}
sameNumbers (2222222);
sameNumbers (1234);
